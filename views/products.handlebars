<link rel='stylesheet' type='text/css' href='/css/table.css' />

<h2>Products</h2>
<article class='message is-warning is-small mobile'>
  <div class='message-header'>
    <p class='message-header-text'>Tables and Desktops are BFFs</p>
    <button id='close-message' class='delete' aria-label='delete'></button>
  </div>
  <div class='message-body'>
    <p>
      ðŸ’» This page is best viewed on a desktop or laptop.
    </p>
    <p>A table is no fun to navigate on a mobile device.
    </p>
  </div>
</article>
<table class='table'>
  <tbody>
    <!-- Table headers -->
    <tr id='header'>
      <th>ID</th>
      {{! <th>Image</th> }}
      <th>Name</th>
      <th>Weight</th>
      <th>Size</th>
      <th>Price</th>
      <th>QTY</th>
      {{! <th>In Stock</th> }}
      <th>Actions</th>
    </tr>
    <!-- Table body with dynamic content -->
    {{#each products as |product|}}
      <tr class='data'>
        <td class='id'>{{product.id}}</td>
        {{! image not working will go back on it later }}
        {{!-- <td class=""><img
          src="/public/images/{{product.image}}"
          alt="{{description}}"
        /></td> --}}
        <td class='data name'>{{product.name}}</td>
        <td class='data weight'>{{product.weight}}</td>
        <td class='data size'>{{product.size}}</td>
        <td class='data price'>{{product.price}}</td>
        <td class='data quantity'>{{product.quantity}}</td>
        {{!-- <td class="in-stock">
        {{#if in_stock}}
          <p class="in-stock">
            Yes
          </p>
        {{/if}}
      </td> --}}
        <td>
          <button id='save-btn' class='save button is-primary' data-id='{{product.id}}'>Save</button>
          <button id='cancel-btn' class='cancel button is-warning' data-id='{{product.id}}'>Cancel</button>
          <button id='edit-btn' class='edit button is-warning' data-id='{{product.id}}'>Edit</button>
          <button class='delete-btn button is-danger' id='delete-btn' data-id='{{product.id}}'>Delete</button>
        </td>
      </tr>
    {{/each}}
    <tr class='add-button-row'>
      <td>
        <button class='button is-primary fas fa-solid fa-plus' id='add-product'></button>
      </td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
      <td></td>
    </tr>
    <tr class='new-product-row'>
      <td class='id'></td>
      <td class='name'><input class='input' value='' /></td>
      <td class='weight'><input class='input' value='' /></td>
      <td class='size'><input class='input' value='' /></td>
      <td class='price'><input class='input' value='' /></td>
      <td class='quantity'><input class='input' value='' /></td>
      <td>
        <button id='save-to-db-btn' class='button is-primary'>Save</button>
        <button id='cancel-new-product-btn' class='button is-warning'>Cancel</button>
      </td>
    </tr>
  </tbody>
</table>

<script src='/js/product-page.js'></script>